
<section class="nft-label">
  <h1>NFT</h1>
</section>

<section>

  <% @nfts.each do |nft| %>
<div class="nft">
  <div class="nft-image">
    <%= link_to nft.link do %>
    <%= image_tag nft.image.nft.url, class: "nft-cover-image" %>
    <% end %>
  </div>
  <div class="nft-other">
    <%= link_to nft.link do %>
  <h2><%= nft.title %></h2>
  <p><%= nft.date %></p>
  <p><%= simple_format nft.description %></p>
    <% end %>
  </div>
</div>
  <% end %>
</section>
